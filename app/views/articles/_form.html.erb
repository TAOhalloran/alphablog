<% if @article.errors.any? %>
<h2> The following errors prevented the article from being created: </h2>
<ul>
  <% @articles.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>

<% end %>
</ul>
<% end %>

<%= formfor @article do |f| %>
 <p>
   <%= f.label :title %><br/>
   <%= f.text_field :title %>
 </p>
 
 <p>
   <%= f.label :description %><br/>
   <%= f.text_field :description %>
 </p>
 
 <p> 
  <%= f.submit %>
 </p>
<% end %>

<%= link_to "Back to articles listing", articles_path %>
